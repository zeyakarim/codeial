<div id="sign-in-page">
    <div id="sign-in-container">
        <div id="sign-in-form">
            <h1>Sign In To Codeial</h1>

            <form action="/users/create-session" method="post" id="sign-in">
                <div>
                    <h4>Email Address</h4>
                    <input type="email" name="email" placeholder="Your Email" required>
                </div>
                
                <div>
                    <h4>Password</h4>
                    <input type="password" name="password" placeholder="Password"  required>
                </div>
                <input type="submit" value="Sign In" id="btn"></input>
            </form>
        </div>
        
        <div id="sign-in-container-box">
            <div id="content">
                <p>Codeial</p>
                <h1>
                    Welcome To The Codeial Website 
                </h1>
            </div>
